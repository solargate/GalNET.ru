<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.solargateteam.galnetru"
    android:versionCode="2"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="ru.solargateteam.galnetru.GalNetRuApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.GalNETru" >
        <activity
            android:name="ru.solargateteam.galnetru.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.GalNETru.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.solargateteam.galnetru.pref.PrefActivity"
            android:label="@string/action_settings"
            android:parentActivityName="ru.solargateteam.galnetru.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.solargateteam.galnetru.MainActivity" />
        </activity>

        <service
            android:name="ru.solargateteam.galnetru.services.RSSService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="ru.solargateteam.galnetru.services.ImageService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="ru.solargateteam.galnetru.services.RadioService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name="ru.solargateteam.galnetru.receivers.AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="ru.solargateteam.galnetru.permission.ALARM" >
            <intent-filter>
                <action android:name="ru.solargateteam.galnetru.ACTION_REFRESH_GALNETRU_ALARM" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="ru.solargateteam.galnetru.receivers.BootReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>