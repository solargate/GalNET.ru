<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/news_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        card_view:contentPaddingLeft="5dp"
        card_view:contentPaddingRight="5dp"
        card_view:contentPaddingTop="5dp"
        card_view:contentPaddingBottom="5dp"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="@color/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ic_card_border" >

            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/cardview_inner_margin"
                android:layout_marginLeft="@dimen/cardview_inner_margin"
                android:layout_marginRight="@dimen/cardview_inner_margin"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <!--
            <TextView
                android:id="@+id/tv_news_pubdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/cardview_inner_margin"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            -->

            <ImageView
                android:id="@+id/iv_news_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cardview_inner_margin"
                android:layout_marginRight="@dimen/cardview_inner_margin"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/tv_news_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/cardview_inner_margin"
                android:layout_marginRight="@dimen/cardview_inner_margin"
                android:layout_marginBottom="@dimen/cardview_inner_margin"
                android:textAppearance="?android:attr/textAppearance"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>